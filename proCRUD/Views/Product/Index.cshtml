@model List<ProductCRUD.Context.Product>
@{
    ViewBag.Title = "Index";
}



<h2>Product Details</h2>
<hr />
<hr />
<br />


<br />

@if (TempData["MsgAdd"] != null)
{
    <div id="abc" class="alert alert-success">
        @TempData["MsgAdd"]
    </div>
}

@if (TempData["MsgDel"] != null)
{
    <div id="abc" class="alert alert-danger">
        <b>Warning</b> @TempData["MsgDel"]
    </div>
}






<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Product Type</th>
        <th>Expiry Date</th>
        <th>Complain Address</th>
        <th>Actions</th>
    </tr>
    @if (Model != null)
    {
        foreach (var items in Model)
        {
            <tr>
                <td>@items.Name</td>
                <td>@items.Price</td>
                <td>@items.Quantity</td>
                <td>@items.ProductType</td>
                <td>@items.ExpireDate</td>
                <td>@items.ComplainAddress</td>





                @*<td>@(items.ExpireDate?.ToShortDateString() ?? "Join date not available")</td>*@

                <td>
                    <a href="@Url.Action("EditProduct","Product",new {id = items.Id})"><i>Modify</i></a> | <a href="@Url.Action("Delete", new { id = items.Id })"><i>Delete</i></a> | <a href="@Url.Action("AddProduct", "Product")"><i>Add New Product</i></a>
                </td>
            </tr>
        }
    }
</table>
<br />
<br />

<hr />



